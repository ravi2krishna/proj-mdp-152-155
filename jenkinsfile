pipeline {
    agent any
    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub')
    }
    stages {
        stage('Build docker image') {
            steps {
                sh 'docker build -t hari63106/java-app:latest .'
            }   
        }
        stage('Remove existing container') {
            steps {
                sh 'docker container rm -f app'
            }
        }
        stage('Run container') {
            steps {
                sh 'docker container run -dt --name app -P hari63106/java-app'
            }
        }
        stage('login') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        stage('Push') {
            steps {
                sh 'docker push hari63106/java-app:latest'
            }
        }
    }
    post {
        always {
            sh 'docker logout'
        }
    }
}
